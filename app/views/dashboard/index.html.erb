<div class="h-screen flex flex-col justify-between items-center bg-gray-200">
  <div class="flex-1 w-2/3 flex flex-col justify-start">
    <header class="py-4 flex flex-row justify-between items-center">
      <div class="w-36 h-8">
        <%= image_tag("logo-color.png") %>
      </div>
      <nav class="flex flex-row gap-8">
        <span>Levels</span>
        <span>Radicals</span>
        <span>Kanji</span>
        <span>Vocabulary</span>
        <span>Help</span>
        <span>Search</span>
        <span>Menu</span>
      </nav>
    </header>
    <div class="flex flex-col gap-4">
      <div class="flex flex-row justify-between gap-4">
        <button class="h-36 px-4 pb-2 flex-1 flex flex-col justify-end items-stretch  bg-blue-500 rounded-lg bg-[url('lessons-bg.png')] bg-center bg-cover bg-no-repeat">
          <div class="flex flex-row justify-between text-white font-semibold">
            <span>Lessons</span>
            <span class="px-2 flex justify-center items-center rounded-full bg-white text-sm text-blue-500">999</span>
          </div>
        </button>
        <button class="h-36 px-4 pb-2 flex-1 flex flex-col justify-end items-stretch  bg-pink-500 rounded-lg bg-[url('reviews-bg.png')] bg-center bg-cover bg-no-repeat">
          <div class="flex flex-row justify-between text-white font-semibold">
            <span>Reviews</span>
            <span class="px-2 flex justify-center items-center rounded-full bg-white text-sm text-pink-500">999</span>
          </div>
        </button>
        <button class="h-36 px-4 py-2 flex-1 flex flex-col justify-end items-stretch  bg-purple-500 rounded-lg bg-[url('extra-study-bg.png')] bg-center bg-contain bg-no-repeat">
          <div class="flex flex-row justify-between text-white font-semibold">
            <span>Extra Study</span>
            <span class="px-2 flex justify-center items-center rounded-full bg-white text-sm text-purple-500">999</span>
          </div>
        </button>
      </div>
      <div class="flex-1 flex flex-row justify-between gap-4">
        <div class="p-4 w-2/3 flex flex-col justify-between items-stretch gap-2 rounded-2xl bg-gray-100">
          <div class="h-6 py-1 text-white text-center text-xs bg-pink-500 rounded-full">Progress Bar</div>
          <div class="flex flex-col gap-2">
            <h3 class="border-b border-gray-200">Radicals</h3>
            <div class="flex flex-row flex-wrap gap-2">
              <% 30.times do %>
                <div class="w-10 h-10 rounded-md flex justify-center items-center bg-blue-500">
                  <span class="text-white text-xl">夌</span>
                </div>
              <% end %>
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <h3 class="border-b border-gray-200">Kanji</h3>
            <div class="flex flex-row flex-wrap gap-2">
              <% 35.times do %>
                <div class="w-10 h-10 rounded-md flex justify-center items-center bg-pink-500">
                  <span class="text-white text-xl">夌</span>
                </div>
              <% end %>
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <h3 class="border-b border-gray-200">Vocabulary</h3>
            <div class="flex flex-row flex-wrap gap-2">
              <% 30.times do %>
                <div class="w-10 h-10 rounded-md flex justify-center items-center bg-gray-200">
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="w-1/3 flex flex-col justify-center items-center rounded-2xl bg-gray-100">
          <h3>
            Review Forecast
          </h3>
        </div>
      </div>
    </div>
  </div>
  <footer class="flex-1 self-stretch bg-[url('footer.gif')] bg-center bg-cover bg-no-repeat"></footer>
</div>
